/* pages/user/user.wxss */
.user_container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 50rpx 0rpx;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 10%;
}

.userinfo-nickname {
  margin-top: 30rpx;
  font-size: 20px;
  color: rgb(0, 0, 0);
}

.hidden{
  margin-top: 20px;
}

.content-top{
  width: 100%;
  height: 100rpx;
  display: flex;
}

.content-top1{
  margin-top: 150rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
}

.check{
  width: 200rpx;
  height: 100rpx;
  margin-top: 70rpx;
  margin-right: 40rpx;
  margin-left: 50rpx;
}

.allow{
  width: 200rpx;
  height: 100rpx;
  margin: 65rpx;
}

.imgsize{
  margin-left: 35px;
  width: 40px;
  height: 40px;
}

.fontsize{
  font-size: 17px;
}

/* 表格样式 */
.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
    width:50%;
    justify-content: center;
    text-align: center;
}

.bg-w{
  background: snow;
}

.bg-g{
  background: #E6F3F9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}