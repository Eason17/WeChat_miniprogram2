/* pages/memo/memo.wxss */
.container1{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /*text-align: center;*/
}

.background {
  margin-top: 0px;
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  opacity: 0.9;
  z-index: -1;
}

.additem{
  width: 100%;
}

.add{
  display: flex;
  flex-direction: row;
  border: 1rpx solid rgb(0, 0, 0);
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #000000;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  padding: 20rpx;
}

.plus{
  width: 41rpx;
  height: 41rpx;
  padding-right: 20rpx;
}

.InputAdd{
  font-size: 28rpx;
  color: rgb(0, 0, 0);
}

.phcolor{
  color: rgb(0, 0, 0);
}

.today{
  margin-top: 15px;
  font-size: 17px;
  text-align: center;
  /* color: #076bbd; */
  color: rgb(0, 0, 0);
}

.todo-today{
  font-size: 15px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
  margin: 2px;
}

.todo-today1{
  width: 100%;
}

.today-item{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  /* background-color: #00a2ea; */
  /* background-color: white; */
  border: 10rpx solid #000000;
  border-radius: 20rpx;
}

.itemdescriptiont{
  flex: 1;
  font-size: 40rpx;
  color: #000000;
}

.itemdescriptiontcompleted{
  flex: 1;
  text-decoration: line-through;
  font-size: 40rpx;
  color: #000000;
}

.itemremove{
  cursor: pointer;
  padding-top: 7rpx;
}

.itemcheckbox{
  margin-right: 20rpx;
}