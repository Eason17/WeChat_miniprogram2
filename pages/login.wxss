/* pages/test.wxss */
page{
  height: 100%;
}

.background {
  margin-top: 0px;
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  opacity: 0.9;
  z-index: -1;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box
}
 
/*登录图片*/
.login-icon{
  flex: none;
}

.login-img{
  width: 750rpx;
}
 
/*表单内容*/
.login-from {
  margin-top: 20px;
  flex: auto;
  height:100%;
}
 
.inputView {
  margin-top: 50%;
  /* background-color: #ffffff; */
  line-height: 44px;
}

/*输入框*/
.nameImage{
  margin-left: 10px;
  margin-top: 15px;
  width: 15px;
  height: 15px
}

.keyImage {
  margin-left: 10px;
  margin-top: 15px;
  width: 15px;
  height: 15px
}
 
.loginLab {
  margin: 15px 20px 15px 10px;
  color: #000000;
  font-size: 15px
}

.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 10px;
  margin-top: 10px;
  color: #000000;
  font-size: 15px;
}
 
.placeholder-input{
  color: #000000;
}

.line {
  width: 100%;
  height: 2px;
  margin-top: 15px;
}

/*按钮*/
.loginBtnView {
  width: 100%;
  height: auto;
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.loginBtn {
  width: 95%;
  margin-top: 20px;
  border-radius: 30px;
}
